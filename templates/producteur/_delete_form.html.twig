<form method="post" action="{{ path('producteur_delete', {'id': producteur.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ producteur.id) }}">
    <div class="button-container"><button class="cafe-button red">Supprimer</button></div>
</form>
