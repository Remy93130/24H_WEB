<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
       	<link rel="stylesheet" type="text/css" href="{{ asset("main.css") }}">
        <link rel="stylesheet" href="https://unpkg.com/leaflet@1.5.1/dist/leaflet.css"
   integrity="sha512-xwE/Az9zrjBIphAcBb3F6JVqxf46+CDLwfLMHloNu6KEQCAWi6HcDUbeOfBIptF7tcCzusKFjFw2yuvEpDL9wQ=="
   crossorigin=""/>
        <link rel="stylesheet" href="{{ asset('map.css') }}"/>
        <script src="https://unpkg.com/leaflet@1.5.1/dist/leaflet.js"
   integrity="sha512-GffPMF3RvMeYyc1LWMHtK8EbPv0iNZ8/oTtHPx9/cc2ILxQ+u905qIwdpULaqDkyBKgOaB57QTMg7ztg8Jm2Og=="
   crossorigin=""></script>
        {% endblock %}
    </head>
    <body>
    	<div id="navbar">
    		<div class="start">
	    		<a href="{{ path("index") }}">
		    		<div class="title">
		    			<img src="{{ asset("pics/coffee.svg")}}" alt="">
		    			<p>Kawa</p>
		    		</div>
	    		</a>
	    		{% if app.user and app.user.type == 'importateur' %}
				<a href="">
		    		<div class="item">
		    			<img src="{{ asset("pics/relations.svg")}}" alt="">
		    			<p>Exportateurs</p>
		    		</div>
	    		</a>
	    		{% endif %}
	    		{% if app.user %}
				<a href="{{ path("commande_index") }}">
		    		<div class="item">
		    			<img src="{{ asset("pics/box.svg")}}" alt="">
		    			<p>Commandes</p>
		    		</div>
	    		</a>
	    		{% endif %}
	    		{% if app.user and app.user.type == 'exportateur' %}
	    			<a href="{{ path("cafe_index") }}">
			    		<div class="item">
			    			<img src="{{ asset("pics/box.svg")}}" alt="">
			    			<p>Mes caf√©s</p>
			    		</div>
		    		</a>
	    		{% endif %}
    		</div>
    		<div class="end">
	    	{% if app.user %}
				<a href="{{ path('app_logout') }}"><div class="logout">Deconnexion</div></a>
	    	{% else %}
				<a href='{{  path('app_login') }}'><div class="login">Se connecter</div></a>
				<a href='{{  path('app_register') }}'><div class="signin">S'inscrire</div></a>
	    	{% endif %}
	    		<a href='{{  path('about') }}'><div class="about">A propos</div></a>
	    	</div>
    	</div>
    	<div id="body">
	        {% block body %}{% endblock %}
        </div>
        <div id="background"></div>
    </body>
    {% block javascripts %}
		<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    	<script type="text/javascript" src='{{ asset('main.js') }}'></script>
    	<script src="{{ asset('map.js') }}"></script>
    {% endblock %}
</html>
